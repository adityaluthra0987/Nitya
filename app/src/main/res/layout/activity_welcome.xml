<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#9A9ADC">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:layout_below="@+id/linearLayout"
        android:layout_alignParentStart="true"
        android:layout_marginStart="170dp"
        android:layout_marginLeft="170dp"
        android:layout_marginTop="170dp"
        android:layout_marginEnd="170dp"
        android:layout_marginRight="170dp"
        android:layout_marginBottom="170dp"
        android:src="@drawable/nitya"
        tools:ignore="UnknownId" />

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginBottom="250dp">

        <Button
            android:id="@+id/login_button"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:background="@drawable/button_background"
            android:text="Login"
            android:textAllCaps="false"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/signup_button"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:background="@drawable/signup_backgroud"
            android:text="Sign Up"
            android:textAllCaps="false"
            android:textColor="#000000" />

    </FrameLayout>

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_marginHorizontal="190dp"
        android:layout_marginVertical="520dp"
        android:layout_marginStart="181dp"
        android:background="@null"
        android:padding="10dp"
        android:src="@drawable/icons8_google" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Other views in the FrameLayout -->

        <View
            android:id="@+id/line1"
            android:layout_width="180dp"
            android:layout_height="2dp"
            android:background="#FF000000"
            android:layout_marginVertical="500dp"
            />
        <View
            android:id="@+id/line2"
            android:layout_width="180dp"
            android:layout_height="2dp"
            android:background="#FF000000"
            android:layout_marginVertical="500dp"
            android:layout_marginLeft="230dp"
            />


    </FrameLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginHorizontal="200dp"
        android:layout_marginVertical="490dp"
        android:layout_marginStart="200dp"
        android:text="or"
        android:textSize="16sp" />

</RelativeLayout>
